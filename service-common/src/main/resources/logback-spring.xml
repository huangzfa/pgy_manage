<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">

    <!-- 应用名称 -->
    <springProperty scope="context" name="appName" source="spring.application.name"
                    defaultValue="application"/>

    <!-- 日志路径 -->
    <springProperty scope="context" name="LOG_PATH" source="logging.path"
                    defaultValue="/www/logs/"/>

    <!-- 日志文件 -->
    <property name="LOG_FILE" value="${LOG_PATH}${appName}/${appName}.%d{yyyy-MM-dd}.%i.log"/>

    <!-- 生产环境配置 -->
    <springProfile name="prod">
        <!-- 生产环境每小时生成一个文件 -->
        <property name="LOG_FILE" value="${LOG_PATH}${appName}.%d{yyyy-MM-dd-HH}.%i.log"/>
    </springProfile>

    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <logger name="com.netflix.discovery.shared.resolver.aws.ConfigClusterResolver" level="ERROR"/>

    <!-- 开发环境, 日志仅输出到控制台 -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <springProfile name="test, preview, prod">
        <!--输出到文件-->
        <appender name="TIME_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOG_FILE}</fileNamePattern>
                <!--只保留最近90天的日志-->
                <maxHistory>90</maxHistory>
                <maxFileSize>100MB</maxFileSize>
                <!--用来指定日志文件的上限大小，那么到了这个值，就会删除旧的日志-->
                <!--<totalSizeCap>1GB</totalSizeCap>-->
            </rollingPolicy>
            <encoder>
                <!--<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ${appName} %X{req.remoteHost} %X{req.requestURI} %X{req.userAgent} %X{req.method} - [%thread] %-5level %logger{36} - %msg%n</pattern>-->
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
        </appender>

        <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!-- daily rollover -->
                <fileNamePattern>${LOG_PATH}${appName}/error/${appName}.error.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <!--只保留最近90天的日志-->
                <maxHistory>90</maxHistory>
                <maxFileSize>100MB</maxFileSize>
                <!--用来指定日志文件的上限大小，那么到了这个值，就会删除旧的日志-->
                <!--<totalSizeCap>1GB</totalSizeCap>-->
            </rollingPolicy>
            <encoder>
                <!--<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ${appName} %X{req.remoteHost} %X{req.requestURI} %X{req.userAgent} %X{req.method} - [%thread] %-5level %logger{36} - %msg%n</pattern>-->
                <pattern>${FILE_LOG_PATTERN}</pattern>
            </encoder>
            <!-- 此日志文档只记录ERROR级别的 -->
            <filter class="ch.qos.logback.classic.filter.LevelFilter">
                <level>ERROR</level>
                <onMatch>ACCEPT</onMatch>
                <onMismatch>DENY</onMismatch>
            </filter>
        </appender>
        <root level="info">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="TIME_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>
</configuration>